<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rlPortraitBlocked"
        android:layout_width="match_parent"
        android:background="@color/black_overlay"
        android:layout_height="match_parent">


        <ru.comtrans.views.VerticalTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:padding="15dp"
            android:text="@string/step_3"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ru.comtrans.views.VerticalTextView
            android:id="@+id/tv_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_centerVertical="true"
            android:text="@string/video_third_text"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ru.comtrans.views.ArrowView
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:id="@+id/iv_arrow"
            android:rotation="230"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:layout_centerInParent="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="2"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"

            />




        <ru.comtrans.views.ArrowView
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:layout_marginTop="115dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="245dp"
            android:layout_marginRight="245dp"
            android:layout_alignParentTop="true"
            android:rotation="90" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="250dp"
            android:layout_marginRight="250dp"
            android:text="1"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>