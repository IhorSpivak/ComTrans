<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/rlPortraitBlocked"
        android:layout_width="match_parent"
        android:background="@color/black_overlay"
        android:layout_height="match_parent">


        <ru.comtrans.views.VerticalTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:padding="15dp"
            android:text="@string/step_2"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ru.comtrans.views.VerticalTextView
            android:id="@+id/tv_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="30dp"
            android:layout_marginStart="120dp"
            android:text="@string/photo_second_text"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ru.comtrans.views.ArrowView
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/tv_vertical"
            android:layout_toRightOf="@id/tv_vertical"
            android:layout_alignTop="@id/tv_vertical"
            />

        <ru.comtrans.views.VerticalTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/tv_vertical"
            android:layout_toRightOf="@id/tv_vertical"
            android:layout_alignTop="@id/tv_vertical"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="1"

            />




        <ru.comtrans.views.ArrowView
            android:id="@+id/iv_arrow"
            android:layout_width="10dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="120dp"
            android:layout_marginRight="120dp"

            android:rotation="90" />

        <ru.comtrans.views.VerticalTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignBottom="@id/iv_arrow"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="120dp"
            android:layout_marginRight="120dp"
            android:text="2"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>